<main>
    <section class="h-100 bg-dark">
        <div class="container py-5 h-100">
          <div class="row d-flex justify-content-center align-items-center h-90">
            <div class="col">
              <div class="card card-registration my-4">
                <div class="row g-0">
                    <div class="p-3 col-sm-12 col-md-14">
                    <h3 style="text-align: center; padding-top: 2%;">{{title}}</h3>
                    <p class="bd-lead" style="padding-top: 2%;" >{{content}}</p>
                </div>   

                  <form action="/update_article" method="post" enctype="application/x-www-form-urlencoded">
                  <input type="hidden" name="UpdateID" id="UpdateID" value="{{id}}">
                     <div class="p-3 col-sm-12 col-md-14">
                      <div class="form-group">
                        <p  style="text-align: padding-top: 2%">***Enter the following to update.***</p>
                        <label>Title</label>
                        <input type="text" name="title" value=""  placeholder="Enter article title" class="form-control" />
                      </div>
                    </div>

                    <div class="p-3 col-sm-12 col-md-14">                  
                      <div class="form-group">
                        <label>Date</label>
                        <input type="text" name="date" value="" placeholder="YYYY-MM-DD" class="form-control" />
                      </div>
                    </div> 

                    <div class="p-3 col-sm-12 col-md-14">
                      <div class="form-group">
                        <label>Content</label>
                        <textarea class="form-control" type="text" name="content" id="content" value="" placeholder="Enter article content" rows="3"></textarea>

                      </div>
                    </div>

                    <div class="p-3 col-sm-12 col-md-14">
                      <div class="form-group">
                        <label>Image</label>
                        <input type="text" name="image" value="" placeholder="Enter the image link" class="form-control" />
                        <p>Example1: https://i.pinimg.com/originals/0d/6c/70/0d6c703556147abab3db28c87f874cf5.jpg</p>
                        <p>Example2: https://www.wallpapertip.com/wmimgs/1-13802_glacier-national-park-watercolor.jpg</p>                      
                        </div>
                    </div>

                    <div class="p-3 col-sm-12 col-md-14">
                      <div class="form-group">
                        <input type="submit" name="upate" value="Update">
                      </div> 
                    </div>
                  </form>


